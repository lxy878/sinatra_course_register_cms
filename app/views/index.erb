<header>
    <h1>Course Register Homepage</h1>
</header>
<% if flash.has?(:authenticate_error) %>
    <div><h3 id="error" ><%= flash[:authenticate_error] %></h3></div>
<% elsif flash.has?(:login_error)%>
    <div> <h3 id="error" ><%= flash[:login_error] %></h3></div>
<% end %>
<main>
    <form action="/login" method="post" >
        <p>Department Name: <input type="text" name="name" id="" required ></p>
        <p>Password: <input type="password" name="password" id="" required ></p>
        <input type="submit" name="" value="Log In">
        <button><a href="/signup">Sign Up</a></button>
    </form>
</main>