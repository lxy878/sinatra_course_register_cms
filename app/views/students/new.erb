<header><h1>Create New Student</h1></header>
<main>
    <form action="/students" method="POST">
        <h2>Student Info</h2>
        <input type="hidden" name='student[department_id]' value='<%= session[:dep_id]%>'>
        <p>Name: <input type="text" name="student[name]" value="" required></p>
        
        <% if !@courses.empty? %>
        <h2>Choose Course/s</h2>
            <% @courses.each do |course| %>
                <input type="checkbox" name="student[course_ids][]" value="<%= course.id %>"><%= course.name%>
            <% end %><br><br> 
        <% end %>
        
        <input type="submit" value="Create">
        <button><a href="/students">Student List</a></button>
    </form>
</main>