<header><h1>Students in <%= @dep.name%> Department</h1></header>
<div>
    <table>
        <tr><th>Student</th><th>Total Number of Enrolled Courses</th></tr>
        <% @students.each do |student|%>
             <tr><td><a href="/students/<%=student.slug%>"><%= student.name%></a></td><td><%= student.courses.size %></td></tr>
        <% end %>
    </table>
</div>
<main>
    <button><a href="/departments/menu">Menu</a></button>
    <button><a href="/students/new">add a new student</a></button>
    <button><a href="/courses">Course List</a></button>
    <button><a href="/professors">Professor List</a></button>
</main>